<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kpfu.itis.gifty">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/GiftyTheme">
        <activity
            android:name=".ui.activities.SignInActivity"
            android:theme="@style/GiftyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.ProfileActivity" />
        <activity android:name=".ui.activities.SignUpActivity" />
        <activity android:name=".ui.activities.SetNameActivity" />
        <activity android:name=".ui.activities.ResetPasswordActivity" />
        <activity android:name=".ui.activities.FriendsActivity" />
        <activity android:name=".ui.activities.GroupsActivity" />
        <activity android:name=".ui.activities.GiftListActivity" />
    </application>

</manifest>